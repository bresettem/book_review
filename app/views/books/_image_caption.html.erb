<div class="caption">
	<div class="image-container">
		<%= missing_image(a) %>
		<div class="caption-text">
			<p class="wrap-text"><%= truncate(a.title, length: 40) %></p>
			<p class="wrap-text"><%= authors(a) %></p>
			<h4><%= link_to "View Book", book_path(a), class: 'label label-primary' %></h4>
			<% if user_signed_in? && current_owner(a) %>
				<h4><%= link_to "Edit", edit_book_path(a), class: 'label label-success' %> <%= link_to "Delete", a, method: :delete, data: { confirm: "Are you sure you want to delete?" }, class: 'label label-danger'%></h4>
			<% end %>
		</div>
	</div>
</div>