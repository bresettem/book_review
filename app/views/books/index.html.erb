<div class="container">
	<div class="jumbotron">
		<div class="row">
			<h1>Welcome!</h1>
			<p>There have been <%= number_with_delimiter(@books_count) %> books added with <%= number_with_delimiter(@pages_count) %> pages.</p>
		</div>
	</div>
</div>
<div class="container">
	<div class="row" id="portfolio">
		<% @allBooks.each do |a| %>
			<div class="col-xs-2 center-block">
				<%= link_to (image_tag a.image_link, class: 'center-block img-thumbnail image-thumbnail'), book_path(a) %>
			</div>
		<% end %>
	</div>
</div>