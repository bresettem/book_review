<%= form_for @book, html: { multipart: true } do |a| %>
  <div class="form-group">
  			
		    <div class="form-group">
  		    <%= a.label :title %>
  		    <%= a.text_field :title %>
		    </div>
		    <div class="form-group">
  		    <%= a.label :authors_id %>
  		    <%#= a.text_field :last_name %>
  		  </div>
  		  <div class="form-group">
  		    <%= a.label :part_of_series %>
  		    <%= a.check_box :part_of_series %>
  		  </div>
  		  <div class="form-group">
  		    <%= a.label :series_name %>
  		    <%= a.text_field :series_name %>
		    </div>
		    <div class="form-group">
  		    <%= a.label :series_number %>
  		    <%= a.text_field :series_number %>
		    </div>
		    <div class="form-group">
  		    <%= a.label :pages %>
  		    <%= a.text_field :pages %>
		    </div>
		    <div class="form-group">
  		    <%= a.label :rating %>
  		    <%= a.text_field :rating %>
		    </div>
		    <div class="form-group">
  		    <%= a.label :publisher %>
  		    <%= a.text_field :publisher %>
		    </div>
		    <div class="form-group">
  		    <%= a.label :published_date %>
  		    <%= a.datetime_select :published_date %>
		    </div>
		    <div class="form-group">
  		    <%= a.label :series_name %>
  		    <%= a.text_field :series_name %>
		    </div>
		    <div class="form-group">
  		    <%= a.label :isbn10 %>
  		    <%= a.text_field :isbn10 %>
		    </div>
		    <div class="form-group">
  		    <%= a.label :isbn13 %>
  		    <%= a.text_field :isbn13 %>
		    </div>
		    <div class="form-group">
  		    <%= a.label :genres_id %>
  		    <%= a.text_field :genres_id %>
		    </div>
		    <div class="form-group">
  		    <%= a.label :link %>
  		    <%= a.text_field :link %>
		    </div>
		    <%= a.label :avatar %>
		    <%= a.file_field :avatar %>
		<%#= a.text_field :genre, class: 'form-control', placeholder: 'Add new Genre'%>
	</div>
	<div class="form-group">
		<%= a.submit "Submit", class: 'btn btn-success' %>
  </div>
<% end %>