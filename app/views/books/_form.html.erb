<%= form_for @book do |f| %>
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-1 col-md-offset-1">
        <div class="caption">
          <div class="image-container">
      			<%= missing_image(book=@book) %>
            <%= link_to (image_tag 'google_preview.gif', class: 'second-image'), @book.info_link, :target => '_blank' %>
    		  </div>
  			</div>
      </div>
      <div class="col-md-5 col-md-offset-1">
        <div class="well well-sm">
           <h2>Edit</h2>
           <div class="form-group">
            <%= f.label :image_link %>
            <%= f.file_field :image_link, class: 'form-control' %>
          </div>   
          <div class="form-group">
              <%= f.check_box :image_delete, class: 'checkbox-inline' %>
              <%= f.label :image_delete %>
            </div>
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :authors %>
            <%= f.text_field :authors, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :publisher %>
            <%= f.text_field :publisher, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :published_date %> (YYYY-MM-DD)
            <%= f.text_field :published_date, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, rows: 3, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :isbn %>
            <%= f.number_field :isbn, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :page_count %>
            <%= f.number_field :page_count, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :categories %>
            <%= f.text_field :categories, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :average_rating %>
            <%= f.number_field :average_rating, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :ratings_count %>
            <%= f.number_field :ratings_count, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :preview_link %>
            <%= f.text_field :preview_link, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :info_link %>
            <%= f.text_field :info_link, class: 'form-control' %>
          </div>
          <%= f.hidden_field :user_id %>
          <%= f.submit "Submit", class: 'btn btn-success' %>
        </div>
      </div>
    </div>
  </div>
<% end %>