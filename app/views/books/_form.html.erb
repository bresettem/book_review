<%= form_for @book do |f| %>
      <div class="form-group">
        <%= f.label :image_link %>
        <%= f.file_field :image_link, class: 'form-control' %>
      </div>
      <%= show_missing_image(book=@book) %>
      <li>
        <%= f.label :image_delete %><br />
        <%= f.check_box :image_delete %>
      </li>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :authors %>
        <%= f.text_field :authors, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :publisher %>
        <%= f.text_field :publisher, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :published_date %>
        <%= f.text_field :published_date, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :isbn %>
        <%= f.number_field :isbn, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :page_count %>
        <%= f.number_field :page_count, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :categories %>
        <%= f.text_field :categories, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :average_rating %>
        <%= f.number_field :average_rating, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :ratings_count %>
        <%= f.number_field :ratings_count, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :preview_link %>
        <%= f.text_field :preview_link, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :info_link %>
        <%= f.text_field :info_link, class: 'form-control' %>
      </div>
      <%= f.hidden_field :user_id %>
      <%= f.submit "Submit", class: 'btn btn-success' %>
    <% end %>