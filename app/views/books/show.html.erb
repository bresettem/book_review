<div class="container-fluid">
  <div class="row">
    <div class="col-md-1 col-md-offset-1">
      <div class="image-container">
       <%= link_to (image_tag @books.image_link, class: 'center-block thumbnail first-image'), @books.info_link, :target => '_blank' %>
       <%= link_to (image_tag 'google_preview.gif', class: 'second-image'), @books.info_link, :target => '_blank' %>
      </div>
    </div>
    <div class="col-md-5 col-md-offset-1 well">
      <h1><%= @books.title %> by <%= @books.authors %></h1>
      <ul>
        <li>
          <% if @books.categories.blank? %>
            No Genre is available
          <% else %>
            <%= @books.categories %>
          <% end %>
        </li>
        <li>
          <% if @books.ratings_count.blank? %>
            No Ratings available
          <% else %>
            <%= @books.average_rating %> with 
            <% if @books.ratings_count === 1 %>
              <%= @books.ratings_count %> rating
            <% else %>
              <%= @books.ratings_count %> ratings
            <% end %>
          <% end %>
        </li>
         <li>
          <% if @books.page_count.blank? %>
            No pages are available
          <% else %>
            <%= @books.page_count %> pages
          <% end %>
        </li>
        <li>
          <% if @books.published_date.blank? %>
            No Published Date
          <% else %>
            Published on <%= @books.try(:published_date).try(:strftime, "%m/%d/%Y") %> by <%= @books.publisher %>
          <% end %>
        </li>
        <li>
          <% if @books.isbn.blank? %>
            No ISBN number
          <% else %>
            <%= @books.isbn %>
          <% end %>
        </li>
      </ul>
      <p>
        <% if @books.description.blank? %>
          No description is available
        <% else %>
          <%= @books.description %>
        <% end %>
      </p>
    </div>
    <div class="col-md-3 col-xs-offset-1">
      <h1 class="text-center featured">Featured</h1>
      <% @random.each do |a| %>
			  <%= link_to (image_tag a.image_link, class: 'img-thumbnail image-thumbnail'), book_path(a) %>
		  <% end %>
    </div>
  </div>
</div>