<div class="container-fluid">
  <div class="row">
    <div class="col-md-1 col-md-offset-1">
      <div class="caption">
        <div class="image-container">
    			<%= missing_image(book=@book) %>
          <%= link_to (image_tag 'google_preview.gif', class: 'second-image'), @book.info_link, :target => '_blank' %>
  		    <div class="caption-text">
  	        <strong>Posted by: </strong><%= @book.user.user_name %><br />
  			    <% if user_signed_in? && (@book.user.id == current_user.id) %>
  						<h4><%= link_to "Edit", edit_book_path(@book), class: 'label label-success' %> </h4>
  						<h4><%= link_to "Delete", @book, method: :delete, data: { confirm: "Are you sure you want to delete?" }, class: 'label label-danger'%></h4>
  					<% end %>
  		     </div>
  		    </div>
			</div>
    </div>
    <div class="col-md-5 col-md-offset-1">
      <div class="well">
        <h1><%= @book.title %> by <%= @book.authors %></h1>
        <ul>
          <li><%= title() %></li>
          <li><%= ratings_count(result=@book) %></li>
          <li><%= page_count(result=@book) %> </li>
          <li><%= published_date(result=@book) %></li>
          <li><%= publisher(result=@book) %></li>
          <li><%= isbn(result=@book) %></li>
        </ul>
        <p><%= description(result=@book) %> </p>
      </div>
      <%= render 'reviews/form' %>
      <ol>
        <% @book.reviews.each do |r| %>
          <div class="well">
            <li>
              <p><%= r.review %></p>
              <p><strong>Posted by: </strong><%= r.user.user_name %> <%=  time_ago_in_words(r.updated_at) %> ago<br />
    					<% if user_signed_in? && (r.user.id == current_user.id) %>
              	<%= link_to "Edit", edit_book_review_path(@book, r) %> <%= link_to "Delete", [@book, r], method: :delete, data: { confirm: "Are you sure you want to delete?" } %></li>
              <% end %></p>
            </li>
          </div>
        <% end %>
      </ol>
    </div>
    <div class="col-md-3 col-xs-offset-1">
      <h1 class="text-center featured">Featured</h1>
      <% if @random.blank? %>
        <div class="well well-sm">
          <p>Sorry, there are no featured books to display.</p>
        </div>
      <% else %>
        <% @random.each do |a| %>
          <div class="caption">
  					<%=  missing_image(a) %>
  			    <div class="caption-text">
  		        <strong>Posted by: </strong><%= a.user.user_name %><br />
  		        <h4><%= link_to "View Book", book_path(a), class: 'label label-primary' %></h4>
  				    <% if user_signed_in? && (a.user.id == current_user.id) %>
  							<h4><%= link_to "Edit", edit_book_path(a), class: 'label label-success' %> </h4>
  							<h4><%= link_to "Delete", a, method: :delete, data: { confirm: "Are you sure you want to delete?" }, class: 'label label-danger'%></h4>
  						<% end %>
  			     </div>
  				</div>
  		  <% end %>
  		<% end %>
    </div>
  </div>
</div>
<script>
  $(".caption").hover(function(){
    $(this).find(".caption-text").fadeIn(400);
  }, function(){
    $(this).find(".caption-text").fadeOut(400);
  });
</script>