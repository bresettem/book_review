<div class="container-fluid">
  <div class="row">
    <div class="col-md-1 col-md-offset-1">
      <div class="caption">
        <div class="image-container">
    			<%= missing_image(book=@book) %>
          <%= link_to (image_tag 'google_preview.gif', class: 'second-image'), @book.info_link, :target => '_blank' %>
  		    <div class="caption-text caption-text-show">
  	        <strong>Posted by: </strong><%= @book.user.user_name %><br />
  	        <h4><%= link_to "Google Preview", @book.info_link, target: '_blank', class: 'label label-primary' %> </h4>
  			    <% if user_signed_in? && (@book.user.id == current_user.id) %>
  						<h4><%= link_to "Edit", edit_book_path(@book), class: 'label label-success' %> </h4>
  						<h4><%= link_to "Delete", @book, method: :delete, data: { confirm: "Are you sure you want to delete?" }, class: 'label label-danger'%></h4>
  					<% end %>
  		     </div>
  		    </div>
			</div>
    </div>
    <div class="col-md-5 col-md-offset-1">
      <div class="well well-sm">
        <h3><%= title(result=@book) %></h3>
        <h6><%= authors(result=@book) %></h6>
        <ul class="see-more">
          <li><%= average_ratings_count(result=@book) %></li>
          <li><%= page_count(result=@book) %> </li>
          <li><%= published_date(result=@book) %></li>
          <li><%= isbn(result=@book) %></li>
        </ul>
        <article><%= description(result=@book) %> </article>
      </div>
      <%= render 'reviews/form' %>
      <ol>
        <% @book.reviews.each do |r| %>
          <div class="well">
              <p><strong>Posted by: </strong><%= r.user.user_name %> <%=  time_ago_in_words(r.updated_at) %> ago
      					<% if user_signed_in? && (r.user.id == current_user.id) %>
                	<%= link_to "Edit", edit_book_review_path(@book, r), class: 'label label-primary' %> <%= link_to "Delete", [@book, r], class: 'label label-danger', method: :delete, data: { confirm: "Are you sure you want to delete?" } %></li>
                <% end %></p>
              <li><p><%= r.review %></p>
            </li>
          </div>
        <% end %>
      </ol>
    </div>
    <div class="col-md-4">
      <h1 class="center-block featured">Featured</h1>
      <% if @random.blank? %>
        <div class="well well-sm">
          <p>Sorry, there are no featured books to display.</p>
        </div>
      <% else %>
        <% @random.each do |a| %>
          <div class="caption">
  					<%=  missing_image(a) %>
  			    <div class="caption-text">
    		      <p class="wrap-text"><%= @book.title %></p>
  						<%= authors(a=@book) %>
  		        <h4><%= link_to "View Book", book_path(a), class: 'label label-primary' %></h4>
  				    <% if user_signed_in? && (a.user.id == current_user.id) %>
  							<h4><%= link_to "Edit", edit_book_path(a), class: 'label label-success' %> <%= link_to "Delete", a, method: :delete, data: { confirm: "Are you sure you want to delete?" }, class: 'label label-danger'%></h4>
  						<% end %>
  			     </div>
  				</div>
  		  <% end %>
  		<% end %>
    </div>
  </div>
</div>