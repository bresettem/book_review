<%= form_for(@genre) do |n| %>
  <div class="form-group">
		<h1><%= n.label :genre %> </h1>
		   <%= n.select :book_type, ['Fiction','Nonfiction'], :selected => 'Fiction' %>
		<%= n.text_field :genre, class: 'form-control', placeholder: 'Add new Genre'%>
	</div>
	<div class="form-group">
		<%= n.submit "Submit", class: 'btn btn-success' %>
  </div>
<% end %>